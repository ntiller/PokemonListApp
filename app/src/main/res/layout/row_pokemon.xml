<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
    >


    <TextView
        android:id="@+id/row_pokemon_id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@android:color/holo_red_light"
        tools:text="1"
        android:layout_alignParentEnd="true"
        android:textSize="34sp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/row_pokemon_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Bulbasaur"
        android:layout_toStartOf="@id/row_pokemon_id_textview"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/row_pokemon_weight_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_pokemon_name_textview"
        tools:text="W: 85"
        />


    <TextView
        android:id="@+id/row_pokemon_height_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_pokemon_name_textview"
        android:layout_toEndOf="@id/row_pokemon_weight_textview"
        tools:text="H: 135"
        android:layout_marginStart="6dp"
        />

</RelativeLayout>