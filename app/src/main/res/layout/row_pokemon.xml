<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="8dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >


        <TextView
            android:id="@+id/row_pokemon_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="34sp"
            tools:background="@android:color/holo_red_light"
            tools:text="1"
            />

        <TextView
            android:id="@+id/row_pokemon_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/row_pokemon_id_textview"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Bulbasaur"
            />

        <TextView
            android:id="@+id/row_pokemon_weight_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_pokemon_name_textview"
            tools:text="W: 85"
            />


        <TextView
            android:id="@+id/row_pokemon_height_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_pokemon_name_textview"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/row_pokemon_weight_textview"
            tools:text="H: 135"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>